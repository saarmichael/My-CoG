{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "types": ["node"],
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, 
    "baseUrl": ".",
    "paths": {
      "~/*": ["*"]
    },
    "jsx": "react-jsx",
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"  // Add this line to include your test files
  ],
  "exclude": [
    "node_modules"
  ]
}
